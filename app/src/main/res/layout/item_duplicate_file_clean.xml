<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="69dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fcfcfc_r11_top"
        android:minHeight="69dp">


        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iv_item"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:round="12dp"
            app:srcCompat="@drawable/svg_duplicate_file_clean_icon" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="35dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:textColor="@color/color_ff0f2336"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="large file clean.doc" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:maxLines="2"
                android:textColor="@color/color_adb2ba"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="32.33mb"
                tools:ignore="SmallSp" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_select"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:padding="10dp"
            android:src="@drawable/scanning_item_complete"
            android:visibility="visible" />
    </FrameLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="18dp" />

</LinearLayout>