<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:background="@color/white">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:src="@drawable/svg_notice_clean" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:gravity="start"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textColor="@color/color_0f3536"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="noticenoticenoticenoticenoticenotice " />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_btn_gradient_bg_r8"
        android:gravity="center"
        android:minWidth="80dp">

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minWidth="80dp"
            android:text="@string/string_clean"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>